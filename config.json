{
    "name": "Mnist_LeNet",
    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "dataset": {
        "type": "MnistDataset",
        "args":{
            "data_dir": "data/",
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "num_epochs": 6,
        "save_dir": "saved/",
        "train_dataloader_args": {
           "batch_size": 128, 
           "shuffle": true,
           "num_workers": 2
        },
        "eval_dataloader_args": {
           "batch_size": 128, 
           "shuffle": false,
           "num_workers": 1
        }
    }
}
